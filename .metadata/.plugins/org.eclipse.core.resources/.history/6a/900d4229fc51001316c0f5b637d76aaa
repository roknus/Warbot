package edu.turtlekit2.warbot.macgyver;

import java.util.List;

import edu.turtlekit2.warbot.WarBrain;
import edu.turtlekit2.warbot.message.WarMessage;
import edu.turtlekit2.warbot.percepts.Percept;
import edu.turtlekit2.warbot.waritems.WarFood;

public class BrainExplorer extends WarBrain{
	
	public BrainExplorer()
	{
		
	}
	
	@Override
	public String action()
	{
		List<Percept> liste = getPercepts();
		List<WarMessage> listeM = getMessage();
		
		for(Percept p : liste)
		{
			if(p.getType().equals("WarBase") && !p.getTeam().equals(getTeam()))
			{
				broadcastMessage("WarRocketLauncher", "cfp", null);
			}
			else
			{		
				while(isBlocked())
				{
					setRandomHeading();
				}
				return "move";
			}
		}
		for(WarMessage m : listeM)
		{
			double id = -1;
			double distance = 2000;
			if(m.getMessage().equals("propose"))
			{
				if(m.getDistance() < distance)
				{
					id = m.getSender();
					distance = m.getDistance();
				}
			}
			if(id != -1)
			{
				sendMessage(id, "accept-proposal", null);
			}
		}
		
		return "idle";
		
//		if(liste.size()>0 && !fullBag()){
